@{
    // hide if ViewData["HideNavbar"] == true OR if page defines @section HideNavbar {}
    var hideNavbar = false;
    if (ViewData["HideNavbar"] is bool vb && vb) { hideNavbar = true; }
    if (IsSectionDefined("HideNavbar")) { hideNavbar = true; }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@(ViewData["Title"] ?? "PSTS Solutions")</title>
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&display=swap" rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    @if (!hideNavbar)
    {
        <header>
            <nav class="navBar">
                <ul>

                    <!--Slot 1-->
                    <li>
                        <a asp-page="/Account/Home">
                            <img src="@Url.Content("~/Images/navBarIcons/home.svg")" alt="Home" />
                        </a>
                    </li>

                    <!--Slot 2-->
                    @if (User.IsInRole("Employee") || User.IsInRole("Manager"))
                    {
                        <li><a asp-page="/Hours/Hours">Hours</a></li>
                    }

                    @if (User.IsInRole("Manager"))
                    {
                        <li class="has-dropdown"> <a asp-page="/Hours/Hours">Hours</a> <ul class="dropdown"> <li><a asp-page="/Manage/changeBillingRate">Billing Rate</a></li> </ul> </li>
                    }

                   
                    @if (User.IsInRole("Clerk") || User.IsInRole("Manager") || User.IsInRole("Employee"))
                    {
                        <li><a asp-page="/Reports/Index">Reports</a></li>
                    }

                    @if (User.IsInRole("Manager"))
                    {
                        <li><a asp-page="/Manage/Index">Manage</a></li>
                    }

                    @if (User.IsInRole("Manager"))
                    {
                        <li class="has-dropdown"> <a asp-page="/Manage/Index">Manage</a> <ul class="dropdown"> <li><a asp-page="/Manage/manageGeneral">General</a></li> <li><a asp-page="/Manage/manageRoles">Manage Roles</a></li> </ul> </li>
                    }

                    @if (User.IsInRole("Admin"))
                    {
                        <li><a asp-page="/Admin/AdminUserTool">Tools</a></li>
                    }

                    @if (User.IsInRole("Admin"))
                    {
                        <li><a asp-page="/appSettings/appSettings">App Settings</a></li>
                    }

                    <li><a asp-page="/Account/Profile">Profile</a></li>

                    <li>
                        <form method="post" asp-page="/Account/Logout" class="logout-form" style="display:inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" style="background:none;border:none;padding:0;cursor:pointer;">
                                <img src="@Url.Content("~/Images/navBarIcons/log-out.svg")" alt="Logout" />
                            </button>
                        </form>
                    </li>

                </ul>
            </nav>
        </header>
    }

    <main>
        @RenderBody()
    </main>

    @RenderSection("Scripts", required: false)
</body>
</html>
